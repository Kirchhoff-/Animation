<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/bScalingLayoutFab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scaling_layout_fab" />

    <Button
        android:id="@+id/bScalingLayoutSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scaling_layout_search_bar" />

    <Button
        android:id="@+id/bScalingLayoutCollapsing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scaling_layout_collapsing" />

</LinearLayout>