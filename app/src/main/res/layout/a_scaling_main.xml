<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="scalingLayoutFab"
        android:text="@string/scaling.layout.fab" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="scalingLayoutSearchBar"
        android:text="@string/scaling.layout.search.bar" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="scalingLayoutCollapsing"
        android:text="@string/scaling.layout.collapsing" />

</LinearLayout>