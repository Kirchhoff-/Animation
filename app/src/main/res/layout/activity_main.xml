<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kirchhoff.animation.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/ticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ticker"
            android:text="@string/ticker" />

        <Button
            android:id="@+id/interpolators"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="interpolators"
            android:text="@string/interpolators" />

        <Button
            android:id="@+id/particleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="particleView"
            android:text="@string/particle" />

        <Button
            android:id="@+id/alerter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="alerter"
            android:text="@string/alerter" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="focusResize"
            android:text="@string/focus_resize_example" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="loadingButton"
            android:text="@string/loading_button" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="swipeBackLayout"
            android:text="@string/swipe_back_layout_example" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="expandableLayout"
            android:text="@string/expandable_layout_example" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="vegaLayoutManager"
            android:text="@string/vega_layout_manager" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="scalingLayoutExample"
            android:text="@string/scaling_layout" />

    </LinearLayout>

</ScrollView>
